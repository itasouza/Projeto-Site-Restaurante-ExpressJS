
	<%- include('inc/head-pagina') -%>
	<%- include('inc/menu-pagina') -%>	
	<%- include('inc/header-padrao') -%>


	<div class="gtco-section" style="padding-bottom: 14em;">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12">
					<div class="col-md-6 animate-box">

                    <%- include("inc/alerts.ejs")-%> 

                    <h3>Reserva de mesa</h3>
                    
                    <form action="/reservations" method="POST" id="reservations">
    
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="inputName">Nome</label>
                                <input type="text" id="inputName" name="name" class="form-control" tabindex="1" value="<%= body.name %>" autocomplete="off" >
                            </div>
                            <div class="item-text input-error"></div> 
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="inputEmail">E-mail</label>
                                <input type="email" title="Por favor preencha o seu email válido" name="email"  value="<%= body.email %>" class="form-control" tabindex="2" id="inputEmail"  placeholder="Adicionar um e-mail válido" autocomplete="off">
                            </div>
                            <div class="item-text input-error"></div> 
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="inputPeople">Pessoas</label>
                                <select id="inputPeople" name="people"  tabindex="3" class="form-control">
                                    <option value=""> -- selecione -- </option>
                                    <option <% if (body.people==1) { %>selected<% } %> value="1">1</option>
                                    <option <% if (body.people==2) { %>selected<% } %> value="2">2</option>
                                    <option <% if (body.people==3) { %>selected<% } %> value="3">3</option>
                                    <option <% if (body.people==4) { %>selected<% } %> value="4">4</option>
                                    <option <% if (body.people==5) { %>selected<% } %> value="5">5+</option>
                                </select>
                            </div>
                            <div class="item-text input-error"></div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="inputDate">Data</label>
                                <input type="text" id="inputDate" name="date"  tabindex="4"  value="<%= body.date %>" class="form-control">
                            </div>
                            <div class="item-text input-error"></div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="inputTime">Hora</label>
                                <input type="text" id="inputTime" name="time"  tabindex="5"  value="<%= body.time %>" class="form-control">
                            </div>
                            <div class="item-text input-error"></div>
                        </div>
                    
                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-primary btn-block" name="enviar" id="enviar"  value="Reservar Agora">
                            </div>
                        </div>
                    </form>
				</div>
				<div class="col-md-5 col-md-push-1 animate-box">
					
					<div class="gtco-contact-info">
						<h3>Informações de Contato</h3>
						<ul>
							<li class="address">Avenida, R. José Versolato, 454545 - 17ª andar - Centro, São Paulo - SP,00000-730</li>
							<li class="phone"><a href="tel://11983330842">(11) 98333-0842</a></li>
							<li class="email"><a href="mailto:itasouza@yahoo.com.br">itasouza@yahoo.com.br</a></li>
							<li class="url"><a href="http://www.yahoo.com.br">yahoo.com.br</a></li>
						</ul>
					</div>


				</div>
				</div>
			</div>
		</div>
	</div>

	<%- include('inc/footer-pagina') -%>

	
